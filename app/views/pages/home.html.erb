<div class="row justify-content-center vw-100">
  <h1 class="text-center my-5">The Simple Url Shortener</h1>
  <div class="border bg-white vh-50 w-50 my-3 rounded p-4">
    <%= simple_form_for @link do |f| %>
      <%= f.input :og_url, input_html: { class: "mb-2" }, label: 'Original Url' %>
      <%= f.input :slug, input_html: { class: "mb-2" }, label: 'Slug ( optional )' %>
      <%= f.submit class: 'btn btn-dark  ' %>
    <% end %>
  </div>
</div>
